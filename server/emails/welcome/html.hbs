    <table
      class="email-wrapper"
      width="100%"
      cellpadding="0"
      cellspacing="0"
      style="
        box-sizing: border-box;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        width: 100%;
      "
      bgcolor="#f2f4f6"
    >
      <tr>
        <td
          align="center"
          style="box-sizing: border-box; font-family: Arial, sans-serif; word-break: break-word"
        >
